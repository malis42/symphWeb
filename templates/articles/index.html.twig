{% extends 'base.html.twig' %}

{% block title %} SymphWeb Articles {% endblock %}

{% block body %}
<h1>Article list </h1>
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        <a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
                        <a href="/article/edit/{{ article.id }}" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles to display</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/assets/js/main.js"></script>
{% endblock %}